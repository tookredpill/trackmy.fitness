{
  "extends": "@tookredpill/tsconfig/configs/base.json",
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmit": true,
    "module": "ESNext",
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "./next.config.mjs",
    "./tailwind.config.js",
    "./postcss.config.js",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
